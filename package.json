{
    "name": "remix-app-reactnorway2022-crystallize-azure",
    "private": true,
    "description": "",
    "license": "",
    "sideEffects": false,
    "scripts": {
        "postinstall": "remix setup node",
        "build": "npm run build:css && npm run generate:gql && cross-env NODE_ENV=production NODE_EXECUTION_MODE=production remix build",
        "build:css": "tailwindcss -i ./src/styles/index.css -o ./src/styles/tailwind.css --minify",
        "dev": "cross-env NODE_ENV=development NODE_EXECUTION_MODE=development remix dev",
        "dev:css": "tailwindcss -i ./src/styles/index.css -o ./src/styles/tailwind.css --watch",
        "generate:gql": "graphql-codegen --config codegen.yml",
        "start": "cross-env NODE_ENV=production NODE_EXECUTION_MODE=production remix-serve build",
        "docker:start": "PORT=80 cross-env NODE_ENV=production NODE_EXECUTION_MODE=production remix-serve build"
    },
    "dependencies": {
        "@crystallize/grid-renderer": "^2.1.1",
        "@crystallize/react-content-transformer": "^2.0.0",
        "@crystallize/react-image": "^7.3.1",
        "@graphql-codegen/typescript": "^2.4.2",
        "@remix-run/react": "^1.2.2",
        "@remix-run/serve": "^1.2.2",
        "@tailwindcss/forms": "^0.4.0",
        "axios": "^0.25.0",
        "cross-env": "^7.0.3",
        "dotenv": "^16.0.0",
        "graphql": "^16.3.0",
        "graphql-request": "^4.0.0",
        "immer": "^9.0.12",
        "lodash": "^4.17.21",
        "parse-duration": "^1.0.2",
        "react": "^17.0.2",
        "react-dom": "^17.0.2",
        "react-player": "^2.9.0",
        "react-query": "^3.34.12",
        "remix": "^1.2.2"
    },
    "devDependencies": {
        "@babel/core": "^7.15.0",
        "@graphql-codegen/cli": "^2",
        "@graphql-codegen/fragment-matcher": "^2",
        "@graphql-codegen/gql-tag-operations-preset": "^1.0.1",
        "@graphql-codegen/near-operation-file-preset": "^2",
        "@graphql-codegen/typed-document-node": "^2",
        "@graphql-codegen/typescript": "^2",
        "@graphql-codegen/typescript-operations": "^2",
        "@graphql-typed-document-node/core": "^2",
        "@remix-run/dev": "^1.2.2",
        "@types/lodash": "^4.14.172",
        "@types/node": "^16.4.12",
        "@types/react": "^17.0.24",
        "@types/react-dom": "^17.0.9",
        "autoprefixer": "^10.4.2",
        "babel-loader": "^8.2.2",
        "concurrently": "^7.0.0",
        "graphql": "^15.5.1",
        "postcss": "^8.4.6",
        "prettier": "^2.3.2",
        "tailwindcss": "^3.0.18",
        "typescript": "^4.5.5"
    },
    "engines": {
        "node": ">=14"
    }
}
